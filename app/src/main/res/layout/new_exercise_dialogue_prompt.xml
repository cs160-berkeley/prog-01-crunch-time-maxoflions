<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/new_name"
        android:editable="false"
        android:textSize="20sp"
        android:textColor="#2b0505"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:gravity="center"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/ex_amount"
        android:editable="false"
        android:textSize="20sp"
        android:textColor="#2b0505"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView2"
        android:layout_marginRight="60dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:id="@+id/units"
        android:textSize="20sp"
        android:textColor="#2b0505"
        android:layout_below="@+id/new_name"
        android:layout_toEndOf="@+id/ex_amount"
        android:layout_marginLeft="-60dp"
        android:layout_alignBottom="@+id/ex_amount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="burns"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:textColor="#2b0505"
        android:layout_alignBottom="@+id/calories"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="for"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:textColor="#2b0505"
        android:layout_alignBottom="@+id/new_name"
        android:layout_toEndOf="@+id/new_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/calories"
        android:editable="false"
        android:textSize="20sp"
        android:textColor="#2b0505"
        android:imeOptions="actionDone"
        android:gravity="center"
        android:layout_below="@+id/ex_amount"
        android:layout_alignEnd="@+id/ex_amount"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calories."
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textColor="#2b0505"
        android:layout_alignBottom="@+id/calories"
        android:layout_toEndOf="@+id/calories" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add a new exercise:"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>